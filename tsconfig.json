{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": ".", 
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@payload-config": [
        "src/app/payload.config.ts"
      ],
      "@components/*": [
        "src/app/(frontend)/components/*"
      ],
      "@lib/*": [
        "/src/app/lib/*"
      ],
      "@utils": [
        "/src/app/lib/utils"
      ],
      "@styles/*": [
        "/src/app/(frontend)/styles/*"
      ],
      "@data/*": ["src/app/data/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
